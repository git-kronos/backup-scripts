{
    "breadcrumbs.enabled": false,
    "cSpell.userWords": [
        "djoser",
        "dotenv",
        "ehlo",
        "gmtime",
        "passd",
        "timeit",
        "vuex"
    ],
    // debug:
    "debug.console.fontSize": 12,
    // editor:
    "editor.codeActionsOnSave": {
        "source.organizeImports": true,
    },
    "editor.fontFamily": "Jetbrains Mono, 'Droid Sans Mono', 'monospace', 'Droid Sans Fallback'",
    "editor.fontLigatures": true,
    "editor.fontSize": 13,
    "editor.formatOnSave": true,
    "editor.minimap.enabled": false,
    "editor.renderControlCharacters": false,
    "editor.renderWhitespace": "none",
    "editor.suggestSelection": "first",
    "editor.wordWrap": "on",
    // emmet:
    "emmet.includeLanguages": {
        "django-html": "html"
    },
    // explorer:
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    // files:
    "files.associations": {
        "**/*.html": "html",
        "**/templates/**/*.html": "django-html",
        "**/templates/**/*": "django-txt",
        "**/requirements{/**,*}.{txt,in}": "pip-requirements"
    },
    "files.autoSave": "onFocusChange",
    "files.exclude": {
        "**/.github": true,
        "**/.idea": true,
        "**/.vscode": true
    },
    "files.trimTrailingWhitespace": true,
    // gitlens:
    "gitlens.hovers.currentLine.over": "line",
    // html:
    // "html.format.endWithNewline": true,
    // "html.format.templating": true,
    // "html.format.indentHandlebars": true,
    // "html.format.indentInnerHtml": true,
    // markdown:
    "markdown.preview.fontSize": 12,
    // python:
    "python.formatting.autopep8Path": "/home/shuvam/.local/bin/autopep8",
    "python.sortImports.path": "/home/shuvam/.local/bin/isort",
    "python.linting.lintOnSave": true,
    // "python.analysis.autoImportCompletions": false,
    // "pythonIndent.trimLinesWithOnlyWhitespace": true,
    // "tabnine.experimentalAutoImports": true,
    // terminal:
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.customGlyphs": true,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "underline",
    "terminal.integrated.fontSize": 13,
    // "terminal.integrated.fontFamily": "NotoSansMono Nerd Font",
    // scm:
    "scm.inputFontSize": 12,
    // security:
    "security.workspace.trust.untrustedFiles": "open",
    // sqltools:
    "sqltools.useNodeRuntime": true,
    // vetur
    "vetur.format.options.tabSize": 4,
    "vetur.format.options.useTabs": true,
    "vetur.format.scriptInitialIndent": true,
    "vetur.format.styleInitialIndent": true,
    // "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    // window:
    "window.menuBarVisibility": "toggle",
    // workbench:
    "workbench.colorTheme": "Spacegray Eighties Dark",
    "workbench.iconTheme": "ayu",
    "workbench.productIconTheme": "fluent-icons",
}